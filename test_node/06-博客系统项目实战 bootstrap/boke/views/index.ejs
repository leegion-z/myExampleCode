<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />

    <script type="text/javascript" src="/bootstrap/js/jquery-1.11.0.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.js"></script>
  </head>
  <body>

  		<%- include("header.ejs",{title:"首页",show:true})%>

    	<div class="container">
	         <table class="table table-striped table-bordered">
                 <caption>Optional table caption.</caption>
                 <thead>
                   <tr>
                     <th>作者</th>
                     <th>文章标题</th>
                     <th>操作</th>
                   </tr>
                 </thead>
                 <tbody>
                   
                   <%for(var i=0;i<list.length;i++){%>

                      <tr>
                       <td><%= list[i].author%></td>
                       <td><a href="/detail/<%= list[i]._id%>"><%= list[i].title%></a></td>
                       <td>
                         <a class="btn btn-default" href="/article/update?id=<%= list[i]._id%>" role="button">编辑</a>
                         <a class="btn btn-danger" href="/article/remove?id=<%= list[i]._id%>" role="button">删除</a>

                       </td>
                     </tr>
                   <%}%>
                 </tbody>
            </table>
  		</div>
  </body>
</html>
